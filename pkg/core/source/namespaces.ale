
;;;; ale core: namespaces

;; namespace management
(def-special mk-ns*)
(def-special declared*)

(define-macro (define-namespace name . forms)
  (let [in-ns (gensym 'in-ns)]
    `(begin
      (eval '(define ,in-ns (mk-ns* ,name)))
      ,@(map! (lambda (f) `(eval '(,in-ns ,f))) forms)
      (eval '(declared* ,name)))))
